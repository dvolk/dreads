<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if book and chapter_index %}
      {% set title = book.author + " - " + book.title + " - Chapter " + (chapter_index + 1)|string %}
    {% else %}
      {% set title = "Ebook list" %}
    {% endif %}
    <title>{{ title }}</title>
    <style>
      button { border-radius: 5px; }
      .columns {
      margin: 5px;
      column-count: auto;
      column-width: 30ch;
      break-inside: avoid-column;
      }
      a { text-decoration: none; }
      a.listitem:hover { font-weight: bold; }
      body { zoom: {{ session.get("zoom", 1) }}; }
      * {
      background-color: {{ session.get("color", '#000000') }};
      color: {{ get_contrast_color(session.get("color", '#000000')) }};
      }
    </style>

  </head>
  {% block content %}
  {% endblock %}
</html>
