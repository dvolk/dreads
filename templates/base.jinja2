<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if book and chapter_index %}
      {% set title = book.author + " - " + book.title + " - Chapter " + (chapter_index + 1)|string %}
    {% else %}
      {% set title = "Ebook list" %}
    {% endif %}
    <title>{{ title }}</title>
    <style>
      button { border-radius: 5px; }
      .columns {
        margin: 5px;
        column-count: auto;
        column-width: 30ch;
        break-inside: avoid-column;
      }
      a { text-decoration: none; }
      a.listitem:hover { font-weight: bold; }
      body { zoom: {{ session.get("zoom", 1) }}; }
      * {
        {% set user_color = session.get("color", '#000000') %}
        background-color: {{ user_color  }};
        color: {{ get_contrast_color(user_color) }};
      }
      #settingsform input[type="submit"] { display: inline; }
      /* Styles for hover image */
      .hover-image {
        position: absolute;
        display: none; /* Initially hidden */
        width: 400px;
        border: 1px solid #ccc;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
        z-index: 1000;
      }
      .hover-text {
        cursor: pointer;
      }
    </style>

  </head>
  {% block content %}
  {% endblock %}
</html>
