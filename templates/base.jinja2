<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if book and chapter_index %}
      {% set title = book.author + " - " + book.title + " - Chapter " + (chapter_index + 1)|string %}
    {% else %}
      {% set title = "Ebook list" %}
    {% endif %}
    <title>{{ title }}</title>
    <style>
      button { border-radius: 5px; }
      .columns-container {
        margin: auto;
      }
      .columns {
        column-count: auto;
        column-width: 400px;
      }
      .item { break-inside: avoid; }
      a { text-decoration: none; }
      a.listitem:hover { font-weight: bold; }
      body { zoom: {{ session.get("zoom", 1) }}; }
      * {
        {% set user_color = session.get("color", '#000000') %}
        background-color: {{ user_color  }};
        color: {{ get_contrast_color(user_color) }};
      }
      .inverse-color {
        color: {{ user_color  }};
        background-color: {{ get_contrast_color(user_color) }};
      }
      #settingsform input[type="submit"] { display: inline; }
      .hover-text {
        cursor: pointer;
      }
      .index-cover {
        width: 400px;
        min-height: 400px;
        border: {{ get_contrast_color(user_color) }} solid 1px;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.3);
      }
    </style>
  </head>
  {% block content %}
  {% endblock %}
</html>
