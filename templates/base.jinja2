<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% if book and chapter_index %}
      {% set title = book.author + " - " + book.title + " - Chapter " + (chapter_index + 1)|string %}
    {% else %}
      {% set title = "Ebook list" %}
    {% endif %}
    <title>{{ title }}</title>
    <style>
      button { border-radius: 5px; }
      .columns {
      margin: 5px;
      column-count: auto;
      column-width: 30ch;
      break-inside: avoid-column;
      }
      a { text-decoration: none; }
      a:hover { font-weight: bold; }
      body { zoom: {{ session.get("zoom", 1) }}; }
      * {
      {% set value = session.get("color", "0")|float %}
      {% set bg_hex_value = perceptual_brightness_hex(value) %}
      background-color: #{{ bg_hex_value }};
      {% if value < 0.5 %}
        color: white;
      {% else %}
        color: black;
      {% endif %}
      }
    </style>

  </head>
  {% block content %}
  {% endblock %}
</html>
